includeConfig 'conf/base.config'

params {

  samplesheet = 'index.csv'
  outdir = 'results'

  help = false

  qc_only = false
  adapter_trimming = false
  porechop_options = ""
  race = false

  qual_filt = false
  nanofilt = false
  nanofilt_options = ""
  chopper = true
  chopper_options = ""

  host_filtering = false
  host_fasta = null
  minimap_options = 'splice'


  denovo_assembly = false
  canu = false
  canu_genome_size = '0.01m'
  canu_options = ''
  fixstart_args = ''

  flye = false
  flye_ont_mode = 'nano-raw'
  flye_options = ''

  clustering = false
  rattle_min_len = 250
  rattle_max_len = 2000

  hybrid = false

  blast_split_factor = ''
  blast_threads = 4
  blastn_db = null

  
  nanoq = false
  nanoq_code_start = 1
  nanoq_read_length = 500
  nanoq_num_ref = 1
  nanoq_qual_threshhold = 10
  nanoq_jump = 10

  map2ref = false
  blast_vs_ref = false
  reference = null
  infoseq = false

  read_classification = false
  kaiju = false
  kaiju_threads = 8
  kaiju_nodes = null
  kaiju_dbname = null
  kaiju_names = null
  krkdb = null
  kraken2 = false
}

process {
  withName: BLASTN2REF { container = 'quay.io/biocontainers/blast:2.13.0--hf3cf87c_0' }
  withName: BLASTN_SPLIT { container = 'quay.io/biocontainers/blast:2.13.0--hf3cf87c_0' }
  withName: BRACKEN { container = 'quay.io/biocontainers/bracken:2.8--py310h0dbaff4_1' }
  withName: CANU { container = 'quay.io/biocontainers/canu:2.2--ha47f30e_0' }
  withName: CAP3 { container = 'docker://quay.io/biocontainers/cap3:10.2011--h779adbc_3' }
  withName: CHOPPER { container = 'quay.io/biocontainers/chopper:0.5.0--hdcf5f25_2' }
  withName: CONCATENATE_FASTA { container = 'docker://quay.io/biocontainers/seqtk:1.3--h5bf99c6_3' }
  withName: CUTADAPT { container = 'quay.io/biocontainers/cutadapt:4.1--py310h1425a21_1' }
  withName: EXTRACT_READS { container = 'docker://quay.io/biocontainers/seqtk:1.3--h5bf99c6_3' }
  withName: EXTRACT_VIRAL_BLAST_HITS { container = 'docker://infrahelpers/python-light:py310-bullseye' }
  withName: FLYE { container = 'quay.io/biocontainers/flye:2.9.1--py310h590eda1_0' }
  withName: FASTQ2FASTA { container = 'docker://quay.io/biocontainers/seqtk:1.3--h7132678_4' }
  withName: INFOSEQ { container = 'quay.io/biocontainers/emboss:6.6.0--h1b6f16a_5' }
  withName: KAIJU { container = 'quay.io/biocontainers/kaiju:1.8.2--h5b5514e_1' }
  withName: KRAKEN2 { container = 'quay.io/biocontainers/kraken2:2.1.3--pl5321hdcf5f25_0' }
  withName: KRONA { container = 'quay.io/biocontainers/krona:2.8.1--pl5321hdfd78af_1' }
  withName: MINIMAP2_ALIGN { container = 'quay.io/biocontainers/minimap2:2.24--h7132678_1' }
  withName: MINIMAP2_REF { container = 'quay.io/biocontainers/minimap2:2.24--h7132678_1' }
  withName: NANOFILT { container = 'quay.io/biocontainers/nanofilt:2.8.0--py_0' }
  withName: NANOPLOT { container = 'quay.io/biocontainers/nanoplot:1.41.0--pyhdfd78af_0' }
  withName: NANOQ { container = 'ghcr.io/eresearchqut/nano-q:1.0.0' }
  withName: PORECHOP_ABI { container = 'docker://quay.io/biocontainers/porechop_abi:0.5.0--py38he0f268d_2' }
  withName: RATTLE { container =  'ghcr.io/eresearchqut/rattle-image:0.0.1' }
  withName: REFORMAT { container = 'docker://quay.io/biocontainers/bbmap:39.01--h92535d8_1' }
  withName: SAMTOOLS { container = 'quay.io/biocontainers/samtools:1.16.1--h6899075_1' }
}

singularity {
  enabled = true
  autoMounts = true
}
docker {
  enabled = true
}


manifest {
    name            = 'eresearchqut/ontvisc'
    author          = 'eResearch, QUT'
    homePage        = 'https://github.com/eresearchqut/ontvisc'
    description     = 'ONT-based Viral Screening for Biosecurity'
    mainScript      = 'main.nf'
    nextflowVersion = '>=21.05.0'
    defaultBranch   = 'main'
}
