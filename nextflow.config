params {

  samplesheet = 'index.csv'
  outdir = 'results'

  help = false

  qc_only = false
  adapter_trimming = false
  porechop_options = ""
  race = false

  qual_filt = false
  nanofilt = false
  nanofilt_options = ""
  chopper = true
  chopper_options = ""

  host_filtering = false
  host_fasta = null
  minimap_options = 'splice'


  denovo_assembly = false
  canu = false
  canu_genome_size = '0.01m'
  canu_options = ''
  fixstart_args = ''

  flye = false
  flye_ont_mode = 'nano-raw'
  flye_options = ''

  clustering = false
  rattle_min_len = 250
  rattle_max_len = 2000

  hybrid = false

  blast_split_factor = ''
  blast_threads = 4
  blastn_db = null

  
  nanoq = false
  nanoq_code_start = 1
  nanoq_read_length = 500
  nanoq_num_ref = 1
  nanoq_qual_threshhold = 10
  nanoq_jump = 10

  map2ref = false
  blast_vs_ref = false
  reference = null
  infoseq = false

  read_classification = false
  megablast = false
  kaiju = false
  kaiju_threads = 8
  kaiju_nodes = null
  kaiju_dbname = null
  kaiju_names = null
  krkdb = null
  kraken2 = false

}

process {

  cpus = 1
  memory = 1.GB

  withLabel:small {
    cpus = 1
    memory = 1.GB
  }

  withLabel: medium {
    cpus = 2
    memory = 8.GB
  }

  withLabel: large {
    cpus = 4
    memory = 12.GB
  }

  withLabel: xlarge {
    cpus = 8
    memory = 48.GB
  }

  withLabel: xlarge2 {
    cpus = 4
    memory = 32.GB
  }

  withLabel: process_high {
    cpus = 8
    memory = 72.GB
  }

  withLabel: process_high2 {
    cpus = 2
    memory = 164.GB
  }
}

singularity {
  enabled = true
  autoMounts = true
}
docker {
  enabled = true
}




manifest {
    name            = 'eresearchqut/ontvisc'
    author          = 'eResearch, QUT'
    homePage        = 'https://github.com/eresearchqut/ontvisc'
    description     = 'ONT-based Viral Screening for Biosecurity'
    mainScript      = 'main.nf'
    nextflowVersion = '>=21.05.0'
    defaultBranch   = 'main'
}
